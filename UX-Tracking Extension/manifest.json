{
  "manifest_version": 2,
  "name": "UX-Tracking Extension",
  "version": "3.0",
  "description": "Ferramenta de rastreio de múltiplas interações do usuário para avaliação de UX.",
  "homepage_url": "https://github.com/Colab-UNIRIO-UFPA/UX-Tracking",
  "applications": {
    "gecko": {
      "id": "waves.brasil@live.com"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "vendor/jquery-3.4.1.min.js",
      "vendor/browser-polyfill-0.10.0.min.js",
      "vendor/searchgazer.js",
      "vendor/webgazer.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "http://*/*", "https://*/*"],
      "exclude_globs": [
        "http://*/webtracer/calibra_webgazer_*",
        "https://*/webtracer/calibra_webgazer_*",
        "http://localhost/webtracer/calibra_webgazer_*",
        "https://localhost/webtracer/calibra_webgazer_*"
      ],
      "js": [
        "vendor/jquery-3.4.1.min.js",
        "vendor/browser-polyfill-0.10.0.min.js",
        "vendor/searchgazer.js",
        "vendor/webgazer.js",
        "main.js",
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "logo.png",
    "default_title": "UX-Tracking Extension",
    "default_popup": "popup/index.html"
  },
  "icons": {
    "48": "logo.png",
    "96": "logo.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webNavigation",
    "unlimitedStorage",
    "tabs",
    "<all_urls>",
    "http://*/*",
    "https://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": []
}